<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71.5dp"
        android:background="#F1F1F1"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/insu_read"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_insu_read"
            android:gravity="center"
            android:text="小白必看"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/insu_teach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3.5dp"
            android:drawableTop="@drawable/icon_insu_choose"
            android:gravity="center"
            android:text="教您读表单"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/insu_mistake"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3.5dp"
            android:drawableTop="@drawable/icon_insu_mistake"
            android:gravity="center"
            android:text="常见误区"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/insu_feedback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_insu_feedback"
            android:gravity="center"
            android:text="用户反馈"
            android:textSize="12sp"/>

    </LinearLayout>



</LinearLayout>