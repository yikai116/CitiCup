<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercise.p.citycup.Activity.SignActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/welcome_logo"
        android:layout_width="215.16dp"
        android:layout_height="96.36dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/lifney_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/welcome_logo">

        <android.support.v4.view.ViewPager
            android:id="@+id/sign_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <ProgressBar
            android:id="@+id/sign_processBar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/themeColor"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>
