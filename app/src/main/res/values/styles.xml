<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">#9e211e1e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#93A8AC</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#BBCCD0</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SideText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/slideTextColor</item>
    </style>


</resources>
