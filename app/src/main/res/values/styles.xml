<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">#9e211e1e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#93A8AC</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#BBCCD0</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="MyTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="TabText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SideText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/slideTextColor</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="CardText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cardTextNormal</item>
        <item name="android:background">@drawable/shape_insul_card_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">7.5dp</item>
        <item name="android:layout_marginRight">7.5dp</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
</resources>
